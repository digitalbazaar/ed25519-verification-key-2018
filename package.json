{
  "name": "@digitalbazaar/ed25519-verification-key-2018",
  "version": "3.2.1-0",
  "description": "A library for generating and working with Ed25519 key pairs, for use with crypto-ld.",
  "homepage": "https://github.com/digitalbazaar/ed25519-verification-key-2018",
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/ed25519-verification-key-2018"
  },
  "bugs": {
    "url": "https://github.com/digitalbazaar/ed25519-verification-key-2018/issues",
    "email": "support@digitalbazaar.com"
  },
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib/*.js"
  ],
  "dependencies": {
    "@noble/ed25519": "^1.6.0",
    "base58-universal": "^2.0.0",
    "crypto-ld": "^7.0.0"
  },
  "devDependencies": {
    "c8": "^7.11.2",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-digitalbazaar": "^3.0.0",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-unicorn": "^42.0.0",
    "karma": "^6.3.19",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^5.0.0",
    "mocha": "^9.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "multibase": "^3.0.0",
    "multicodec": "^2.0.0",
    "webpack": "^5.72.0"
  },
  "c8": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "browser": {
    "bs58": false,
    "crypto": false,
    "util": false,
    "semver": false,
    "./lib/ed25519.js": "./lib/ed25519-browser.js"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "Decentralized",
    "DID",
    "Credential",
    "Cryptography",
    "Linked Data"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-node && npm run test-karma",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 tests/**/*.spec.js",
    "test-karma": "karma start tests/karma.conf.cjs",
    "coverage": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint ."
  }
}
